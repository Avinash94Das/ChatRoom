<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/blue_dark_grey"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/message_imv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:src="@color/green" />

    <TextView
        android:paddingLeft="3.5dp"
        android:id="@+id/message_user"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/message_imv"
        android:gravity="top"
        android:text="Hemen"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:gravity="left|center_horizontal"
        android:id="@+id/message_time"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/message_imv"
        android:layout_alignLeft="@+id/message_user"
        android:layout_alignStart="@+id/message_user"
        android:layout_marginBottom="2dp"
        android:text="2 am"
        android:textColor="#f9f4f4"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/message_time"
        android:layout_marginTop="10dp"
        android:text="text"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/message_text" />
</RelativeLayout>